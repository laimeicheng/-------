  </view>
  <view class="flex-box myOrder-tab-list" wx:elif="{{ goodsTypeList.length == 1 && goodsTypeList[0] == 3 }}">
    <view class="flex-sub-box-4 {{ currentTabIndex == 0 ? 'active' : '' }}" bindtap="clickOrderTab" data-index="0" data-href="myOrder-all">全部</view>
    <view class="flex-sub-box-4 {{ currentTabIndex == 1 ? 'active' : '' }}" bindtap="clickOrderTab" data-index="1" data-href="myOrder-toPay">待付款</view>
