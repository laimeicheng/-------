  height: calc(100% - 164rpx);
  background: #f6f6f6;
}

.colume-2 .item {
  height: 570rpx;
  overflow: hidden;
  width: 49%;
  float: left;
  background: #fff;
  margin-bottom: 2%;
}

.colume-2 .item:nth-child(odd) {
  margin-right: 2%;
}

.colume-2 .item-pic {
  height: 360rpx;
  width: 100%;
  float: left;
  display: block;
}

.colume-2 .item-detail {
  position: relative;
  float: left;
  width: calc(100% - 20rpx);
  height: 210rpx;
  padding: 0 10rpx;
}

.colume-2 .item-title {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 15rpx;
  margin-top: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 16px;
  min-height: 80rpx;
}

.colume-2 .item-price {
  font-size: 14px;
  color: #f95d5d;
  margin-right: 15rpx;
}

.colume-2 .item-price text {
  font-size: 18px;
}

.colume-2 .item-buy {
  height: 30px;
  width: 30px;
  color: #f95d5d;
  position: absolute;
  right: 0;
  bottom: 10rpx;
  font-size: 25px;
  line-height: 30px;
  text-align: center;
}

.colume-2 .item-sales {
  color: #999;
  font-size: 14px;
}

/*历史记录样式*/

.nomore {
  text-align: center;
  height: 30px;
  line-height: 30px;
  color: #dcdcdc;
  font-size: 16px;
}

.title {
  height: 30px;
  line-height: 30px;
  padding: 10px;
}

.left {
  float: left;
}

.right {
  float: right;
  color: #f95d5d;
  font-size: 12px;
}

.content {
  padding: 0 10px;
}

.history-item {
  height: 20px;
  display: inline-block;
  background: #f6f6f6;
  color: #333;
  border-radius: 3px;
  line-height: 20px;
  font-size: 12px;
  text-align: center;
  padding: 0 10px;
  margin-right: 10px;
  margin-bottom: 10px;
}
