page {
  font-size: 31rpx;
  background-color: #f8f8f8;
  color: #333;
}
.additional-info-section {
  margin-top: 20rpx;
  border-top: 1px solid #e8e8e8;
  background-color: #fff;
}
.goods-detail {
  padding: 16rpx 28rpx;
  border-bottom: 1px solid #e8e8e8;
  font-size: 0;
}
.goods-cover {
  height: 132rpx;
  width: 132rpx;
}
.goods-info {
  display: inline-block;
  width: calc(100% - 210rpx);
  margin-left: 20rpx;
  vertical-align: top;
  font-size: 0;
}
.goods-title {
  margin-bottom: 6rpx;
  font-size: 31rpx;
}
.goods-model {
  font-size: 26rpx;
  color: #666;
}
.additional-name, .additional-form-ele {
  display: inline-block;
  vertical-align: middle;
}
.additional-name {
  width: 5em;
}
.additional-form-ele {
  width: calc(100% - 6em);
  margin-left: 1em;
}
.additional-form-ele input, .additional-form-ele textarea {
  width: 100%;
  border: none;
}
.additional-form-ele input {
  margin: -4rpx 0;
}
.additional-form-ele textarea {
  height: 3em;
}
.image-item, .img-upload {
  display: inline-block;
  width: 110rpx;
  height: 110rpx;
  vertical-align: top;
  border: 1px solid #ccc;
}
.image-item {
  position: relative;
  margin-left: 20rpx;
}
.image-item image {
  width: 100%;
  height: 100%;
}
.delete-img-btn {
  position: absolute;
  right: -13rpx;
  top: -13rpx;
  width: 26rpx;
  height: 26rpx;
  line-height: 26rpx;
  font-size: 31rpx;
  color: #fff;
  text-align: center;
  border-radius: 50%;
  background-color: orange;
}
.img-upload {
  line-height: 110rpx;
  font-size: 140rpx;
  color: #ccc;
  text-align:center;
}
.goods-additional-item {
  padding: 22rpx 28rpx;
  border-bottom: 1px solid #e8e8e8;
}
button {
  margin: 50rpx 31rpx;
  font-size: 31rpx;
}
.show-info-wrap .additional-form-ele {
  text-align: right;
}
