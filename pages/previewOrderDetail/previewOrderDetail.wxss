page {
  background-color: #f4f4f4;
}
.page-top-nav {
  position: static;
  margin: 0;
}
.previewOrder-section {
  padding: 34rpx 36rpx;
  margin-bottom: 14rpx;
  background:#fdfdfd;
}
.previewOrder-goods-list {
  padding-top: 24rpx;
  padding-bottom: 24rpx;
}
.previewOrder-goods-item {
  position: relative;
}
.previewOrder-goto-homepage .icon-rightarrow {
  position:absolute;
  right:10px;
  display:block;
  font-size:18px;
}
.previewOrder-wrap .right-arrow-bar {
  line-height: 18px;
}
.previewOrder-wrap .right-arrow-bar:before {
  top: 7px;
}
.previewOrder-wrap .list-goods-cover {
  left: 0;
  width:117.2rpx;
  height:117.2rpx;
}
.previewOrder-wrap .list-goods-content {
  padding: 0 78px 0 80px;
  font-size: 14px;
}
.previewOrder-wrap .list-goods-title {
  color: #787878;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.previewOrder-wrap .list-goods-model {
  color: #aaa;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.previewOrder-wrap .list-goods-price {
  margin-top: 5px;
  color:#ff7223;
}
.payPage-wrap {
  background-color: #eee;
}
textarea {
  width: auto;
  height: 60px;
  padding: 10px;
  border: 1px solid #eee;
  background-color: #e9e7e8;
}
input {
  padding:10px;
  border:1px solid #eee;
  background-color: #e9e7e8;
}

.previewOrder-section-title {
  margin-bottom: 8px;
}
.previewOrder-section-title .icon-rightarrow {
  float: right;
  font-size: 16px;
}
.options-group {
  position: relative;
  display: block;
  width: 57%;
  margin: 0 auto;
  color: #919191;
  overflow: hidden;
}
.options-item-left,
.options-item-right {
  position:relative;
  z-index: 2;
}
.options-item-left {
  float: left;
}
.options-item-right {
  float: right;
}
.options-item-circle {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 5px;
  border-radius:50%;
  background-color: #a4a0a1;
}
.options-item-circle.selected {
  background-color: #ffca00;
}
.options-group-crossband {
  position: absolute;
  left: 24rpx;
  right: 24rpx;
  top: 21rpx;
  height: 14rpx;
  background-color: #d2d2d2;
  z-index: 1;
}
.previewOrder-pay-btn {
  display: block;
  width: 180px;
  line-height: 38px;
  font-size: 14px;
  margin: 20px auto;
  border-radius: 5px;
  color: #000;
  background-color: #ffca00;
}
.buy-goods-count{
  display:inline-block;
  width: 25px;
  height: 25px;
  line-height: 25px;
  margin: 0;
  box-sizing:content-box;
  text-align:center;
  vertical-align:middle;
  border: none;
}
.quantity .minus, .quantity .plus {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-weight: normal;
  background-color: #ffcc01;
  border-color: #ffcc01;
  border-radius: 50%;
}
.quantity .minus {
  background-color: #fff;
  border-color: #333;
}
.quantity .plus::before, .quantity .minus::before {
  width: 30rpx;
  height: 5rpx;
}
.quantity .plus::after {
  width: 5rpx;
  height: 30rpx;
}
.quantity .plus::after, .quantity .plus::before {
  background-color: #fff;
}
.quantity .minus::before, .quantity .minus.disabled::before {
  background-color: #333;
}
.previewOrder-time-picker {
  padding: 10px;
  background-color: #e9e7e8;
  color: #333;
}
.previewOrder-discount-dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  background-color: rgba(0,0,0,0.7);
}
.previewOrder-discount-dialog .previewOrder-section {
  margin-bottom: 0;
}
.discount-dialog-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}
.select-discount-title {
  line-height: 24px;
  color: #818181;
}
.discount-dialog-options {
  background-color: #f7f5f8;
  overflow: hidden;
}
.discount-dialog-options text {
  display: inline-block;
  padding: 34rpx 36rpx;
  min-width: 50px;
  text-align: center;
}
.previewOrder-discount-dialog .radio-group {
  padding-left: 20px;
}
.previewOrder-discount-dialog .radio-group label {
  display: block;
  margin: 10px 0;
  word-break: break-all;
}
.location-section {
  display:inline-block;
  border:1px solid #ccc;
  margin-left:10px;
  line-height:24px;
  width: 50px;
  text-align: center;
  vertical-align: middle;
  border-radius:4px;
}
.location-section>view {
  overflow: hidden;
}
.previewOrder-section-location {
  margin-top: 10px;
  text-align: center;
}
.previewOrder-wrap .quantity .minus:before {
  background-color: #dedede;
}
.previewOrder-wrap .quantity .minus {
  border-color: #dedede;
}


