<view class="logistics-wrap page" id="logisticsPage">
  <view class="logistics-top-section">
    <view style="display:inline-block;">
      <view><text style="color:#333;margin-right:5px;">物流状态</text><text class="logistics-order-status" wx:if="{{ info.State == 2 }}">在途中</text><text class="logistics-order-status success" wx:if="{{ info.State == 3 }}">已签收</text><text class="logistics-order-status error" wx:if="{{ info.State == 4 }}">问题件</text></view>
      <view style="margin-top:10px;font-size:12px;line-height:17px;">
        <view>承运公司：<text class="logistics-company">{{ info.express_name }}</text></view>
        <view>运单编号：<text class="logistics-order-id">{{ info.LogisticCode }}</text></view>
      </view>
    </view>
  </view>
  <view class="logistics-info-container">
    <view style="color:#333; padding-bottom:10px; margin-bottom:11px; border-bottom:1px solid #ccc;">物流跟踪</view>
    <view class="logistics-info-list">
      <view wx:for="{{ info.Traces }}" class="logistics-info-item">
        <view>{{ item.AcceptStation }}</view>
        <view>{{ item.AcceptTime }}</view>
      </view>
    </view>
  </view>
</view>

